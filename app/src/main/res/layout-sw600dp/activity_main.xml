<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.antonio.gesapp.MainActivity">
    <!--Contenedor principal se divide en pesos iniciando en 10-->




    <android.support.design.widget.CoordinatorLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
       <!-- <include layout="@layout/toolbar"/>-->

        <LinearLayout
            android:layout_margin="7dp"
            android:id="@+id/layout_weight2"
            android:layout_weight=".3"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary_dark"
            >


            <TextView

               android:layout_weight="1"
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tituloMenu"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/tituloMenu"
                android:textAlignment="center"
                android:gravity="center"

                />


            <TextView
                android:layout_weight="1"
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto_subtitulo_Menu"
                android:textAlignment="center"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/subtituloMenu"
                android:gravity="center"
                />

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/gesmenu" />


            </LinearLayout>




        </LinearLayout>  <!--Fin del contenedor de peso 6-->



        <LinearLayout
            android:layout_weight=".7"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




            <LinearLayout
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/botonRegistroDeCoductorXML"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/ic_person_add_acent_40dp"
                            android:elevation="8dp"
                            android:text="@string/texto_registrar_Conductor"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textSize="@dimen/tamanoDeLosTextosSubtitulos"
                            android:theme="@style/buttonStyleMenu"

                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/botonLoginDeConductorXML"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/ic_vpn_key_acent_40dp"
                            android:elevation="8dp"
                            android:text="@string/texto_comprobar"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textSize="@dimen/tamanoDeLosTextosSubtitulos"
                            android:theme="@style/buttonStyleMenu"

                            />

                    </LinearLayout>














                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/botonVehiculosRegistradosXML"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/ic_list_acent_40dp"
                            android:elevation="8dp"
                            android:text="@string/texto_listaDePlacas"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textSize="@dimen/tamanoDeLosTextosSubtitulos"
                            android:theme="@style/buttonStyleMenu"

                            />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/botonNuevoInicioDeCesionXML"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/ic_loop_acent_40dp"
                            android:elevation="8dp"
                            android:text="@string/texto_nevo"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textSize="@dimen/tamanoDeLosTextosSubtitulos"
                            android:theme="@style/buttonStyleMenu"

                            />
                    </LinearLayout>











            </LinearLayout>




</LinearLayout>

            </LinearLayout>  <!--Fin del contenedor de peso 10  android:layout_center_InPatrent="true"-->



        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:elevation="8dp"
            android:src="@android:drawable/btn_star"
            tools:ignore="RtlHardcoded"
            tools:targetApi="lollipop"
            app:layout_anchor="@id/layout_weight2"
            app:layout_anchorGravity="bottom|right|end"

            />


    </android.support.design.widget.CoordinatorLayout>

    </RelativeLayout>





