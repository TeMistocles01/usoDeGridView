<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroConductorActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">




    <LinearLayout
        android:focusableInTouchMode="true"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/sub_titulo_texto_entrada_de_vehiculo"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/tituloTextosT"/>


        <LinearLayout
            android:layout_margin="5dp"
            android:layout_weight=".4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="NestedWeights">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_label_acent_35dp"
                    android:contentDescription="@string/icon_indicador"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/subtitulo_titulo_texto_importante"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/tamanoDeLosTextosSubtitulos" />
                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/texto_asegurese_de"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/tamanoDeLosTextos" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorDivider"
                android:visibility="visible" />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_label_acent_35dp"
                    android:contentDescription="@string/indicador" />

                <LinearLayout
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/subtitulo_titulo_invente_su_contraseña_y_memoricela"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/tamanoDeLosTextosSubtitulos" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/texto_constara_de_2_caracteres"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/tamanoDeLosTextos" />





                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_check_acent_30dp"
                        android:contentDescription="@string/icon_indicador"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/texto_instruccion1"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/tamanoDeLosTextos" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_check_acent_30dp"
                        android:contentDescription="@string/icon_indicador"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/texto_instruccion2"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/tamanoDeLosTextos" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_check_acent_30dp"
                        android:contentDescription="@string/icon_indicador"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/texto_instruccion3"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/tamanoDeLosTextos" />

                </LinearLayout>

            </LinearLayout>





            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorDivider"
                android:visibility="visible" />




            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sub_titulo_texto_ingrece_sus_datos"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/tamanoDeLosTextosSubtitulos" />


            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto_el_sistema_solo_registra"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/tamanoDeLosTextos" />







        </LinearLayout> <!--cierre layout .3 primero-->




        <LinearLayout

            android:layout_weight=".6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="UselessParent">

                    <LinearLayout

                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:contentDescription="@string/img_vehiculo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_directions_car_acent_35dp" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/textInputLayout3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:counterEnabled="true"
                            app:counterMaxLength="7">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/getplacas"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/hind_placas"
                                android:textColor="@color/colorSecondaryText"
                                android:textSize="@dimen/tamanoDeLosTextoshinds"
                                android:inputType="textCapCharacters"
                                android:digits="ABCDEDFGHIJKLMNÑOPQRSTUVWXYZ1234567890"/>
                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_vpn_key_acent_35dp"
                            android:contentDescription="@string/icon_imagen" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/textInputLayout2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:counterEnabled="true"
                            app:counterMaxLength="2">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/getcontraseña"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/hind_contraseña"
                                android:inputType="textCapCharacters|textPassword"
                                android:textColor="@color/colorSecondaryText"
                                android:textSize="@dimen/tamanoDeLosTextoshinds"
                                android:digits="ABCDEDFGHIJKLMNÑOPQRSTUVWXYZ1234567890"

                                />

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_done_all_acent_35dp"
                            android:contentDescription="@string/icon_chek" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/textInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:counterEnabled="true"
                            app:counterMaxLength="2">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/getconfirmacontraseña"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/hind_repetircontraseña"
                                android:inputType="textCapCharacters|textPassword"
                                android:textColor="@color/colorSecondaryText"
                                android:textSize="@dimen/tamanoDeLosTextoshinds"
                                android:digits="ABCDEDFGHIJKLMNÑOPQRSTUVWXYZ1234567890" />
                        </android.support.design.widget.TextInputLayout>





                    </LinearLayout>

                    <Button
                        android:layout_marginTop="10dp"
                        android:layout_gravity="end"
                        android:id="@+id/botonResguardarVehicculo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/texto_boton_resguardar"
                        android:textAllCaps="false"
                        android:theme="@style/buttonStyleRegistroConductor"
                        android:elevation="8dp"
                        android:drawableBottom="@drawable/ic_send_acent_30dp"
                        android:textSize="@dimen/tamanoDeLosTextosBotones"
                        />


                    <View
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorDivider"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:contentDescription="@string/img_vehiculo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_warning_acent_24dp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/texto_alerta"
                                android:layout_gravity="center_vertical"
                                android:textColor="@color/colorPrimaryText"
                                android:textSize="@dimen/tamanoDeLosTextos"  />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/texto_placa_alerta_registrada"
                                    android:textAlignment="center"
                                    android:textColor="@color/colorSecondaryText"
                                    android:textSize="@dimen/tamanoDeLosTextos"  />

                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:id="@+id/textViewPlacaRepetidaXML"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/texto_placa"
                                    android:textAlignment="center"
                                    android:textColor="@color/colorAlerta"
                                    android:textSize="@dimen/tamanoDeLosTextos"

                                    />



                            </LinearLayout>


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorDivider"
                            android:visibility="visible" />
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">



                            <ImageView

                                android:contentDescription="@string/img_vehiculo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_playlist_add_check_acent_40dp"/>

                            <TextView

                                android:gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/texto_total_de_vehiculos_protegidos"
                                android:textColor="@color/colorPrimaryText"
                                android:textSize="@dimen/tamanoDeLosTextos"/>



                            <TextView
                                android:layout_weight="1"
                                android:gravity="center"
                                android:id="@+id/totalDePlacasXML"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/texto_hind_0"
                                android:textColor="@color/colorPrimaryText"
                                android:textSize="@dimen/subtituloMenuC"
                                />



                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorDivider"
                            android:visibility="visible" />


                    </LinearLayout>



                </LinearLayout>





        </LinearLayout>    <!--cierre layout .5 primero-->


        <include layout="@layout/navigation"></include>

    </LinearLayout>
    </ScrollView>


    </android.support.design.widget.CoordinatorLayout>

